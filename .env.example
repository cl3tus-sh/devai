# Ollama Configuration
OLLAMA_MODEL=qwen2.5-coder:7b
OLLAMA_HOST=http://localhost:11434

# Generation Parameters
# Temperature: Lower = more deterministic (0.0-1.0, recommended: 0.1)
OLLAMA_TEMPERATURE=0.1

# Commit Message Configuration
# Maximum length for the first line of commit message (recommended: 72)
MAX_COMMIT_LENGTH=72
# Set to 0 to disable diff truncation (use full diff)
MAX_DIFF_LINES=1000
# Require scope in commit messages (true/false)
REQUIRE_SCOPE=false
